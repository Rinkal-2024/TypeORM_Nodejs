{
  "name": "cosma-backend",
  "version": "1.0.2",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint  && npm run directories && npm run copy",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "typeorm": "typeorm-ts-node-commonjs",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "copy:json": "find ./src/public/locales/ -name \"*.json\" -type f -exec cp {} ./dist/public/locales/ \\;",
    "copy": "npm run copy:json",
    "directories": "node -e \"fs.mkdirSync(process.argv[1], {recursive: true})\" ./dist/public/locales",
    "migrate": "rm -rf dist/ && npm run build && npx typeorm migration:run --dataSource dist/index.js",
    "seeder": "rm -rf dist/ && npm run build && npx typeorm-extension seed:run --dataSource dist/index.js"
  },
  "dependencies": {
    "@types/multer": "1.4.12",
    "@types/nodemailer-direct-transport": "1.0.35",
    "@types/nodemailer-smtp-transport": "2.7.8",
    "axios": "1.7.9",
    "bcrypt": "5.1.1",
    "bcryptjs": "2.4.3",
    "body-parser": "1.20.3",
    "compression": "1.7.5",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "csv-parser": "3.1.0",
    "dotenv": "16.4.7",
    "errorhandler": "1.5.1",
    "exceljs": "4.4.0",
    "express": "4.21.2",
    "express-flash": "0.0.2",
    "express-session": "1.18.1",
    "fs-extra": "11.3.0",
    "generate-password": "1.7.1",
    "handlebars": "4.7.8",
    "i18n": "0.15.1",
    "iconv-lite": "0.6.3",
    "jsonwebtoken": "9.0.2",
    "lodash": "4.17.21",
    "lusca": "1.7.0",
    "moment": "2.30.1",
    "morgan": "1.10.0",
    "multer": "1.4.5-lts.1",
    "mysql": "2.18.1",
    "node-cron": "^3.0.3",
    "node-fetch": "2.7.0",
    "nodemailer": "6.10.0",
    "puppeteer-html-pdf": "4.0.8",
    "rapiq": "0.9.0",
    "reflect-metadata": "0.2.2",
    "typeorm": "0.3.20",
    "typeorm-extension": "3.6.3",
    "uuid": "11.0.5",
    "xlsx": "0.18.5"
  },
  "devDependencies": {
    "@types/async": "3.2.24",
    "@types/bcrypt-nodejs": "0.0.31",
    "@types/bcryptjs": "2.4.6",
    "@types/body-parser": "1.19.5",
    "@types/compression": "1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "2.8.17",
    "@types/errorhandler": "1.5.3",
    "@types/express": "4.17.21",
    "@types/express-session": "1.18.1",
    "@types/jquery": "3.5.32",
    "@types/jsonwebtoken": "9.0.8",
    "@types/lodash": "4.17.15",
    "@types/lusca": "1.7.5",
    "@types/morgan": "1.9.9",
    "@types/node": "22.12.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "2.6.12",
    "@types/nodemailer": "6.4.17",
    "@types/uuid": "10.0.0",
    "@types/xlsx": "0.0.35",
    "@types/yargs": "17.0.33",
